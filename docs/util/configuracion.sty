    \fancyhead[L]{\includegraphics[height=2cm]{Logo_UNAM.png} Complejidad Computacional}
    \fancyhead[C]{\TituloMain}
    \fancyhead[R]{Facultad de Ciencias UNAM \includegraphics[height=2cm]{Logo_FC.png}}

    \fancyfoot[C]{\thepage}

    \renewcommand{\headrulewidth}{0.4pt}
    \renewcommand{\footrulewidth}{0.4pt}
}
